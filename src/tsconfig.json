{
  "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "strict": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "importHelpers": true,
      "declaration": true,
      "sourceMap": false,
      "target": "es6",
      "lib": ["es6"],
      "outDir": "../lib",
      "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.json"
  ],
  "exclude": ["node_modules"]
}