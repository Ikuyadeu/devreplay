{
  "name": "devreplay",
  "version": "1.9.17",
  "description": "A linter that replay your developing style",
  "bin": {
    "devreplay": "./bin/devreplay"
  },
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "build:wasm": "tree-sitter build-wasm node_modules/tree-sitter-javascript && mv tree-sitter-javascript.wasm src/",
    "create": "npm run build && npm run test",
    "compile": "npm run clean && tsc -b tsconfig.json",
    "publish:local": "sh ./scripts/npmPublish.sh",
    "test": "jest",
    "test:dir": "node ./bin/devreplay --dir ./test test-fixutures/rules/devreplay.json",
    "test:fix": "node ./bin/devreplay --fix test-fixutures/files/test.py test-fixutures/rules/devreplay.json",
    "test:init": "node ./bin/devreplay --init",
    "test:initdetail": "node ./bin/devreplay --init-detail",
    "test:patch": "node ./bin/devreplay --init-patch test-fixutures/files/test.patch",
    "test:patchdetail": "node ./bin/devreplay --init-patch-detail test-fixutures/files/test.patch yuki bugfix xxx",
    "test:sstubs": "node ./bin/devreplay --init-sstubs test-fixutures/files/sstubs.json",
    "test:all": "yarn run test && yarn run test:dir && yarn run test:fix",
    "test:regex": "node ./bin/devreplay --regex",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "verify": "npm-run-all clean compile"
  },
  "dependencies": {
    "@babel/code-frame": "^7.12.11",
    "@types/text-table": "^0.2.1",
    "chalk": "4.1.0",
    "commander": "^7.0.0",
    "diff": "5.0.0",
    "lodash": "^4.17.20",
    "parse-diff": "^0.7.1",
    "simple-git": "2.31.0",
    "ts-jest": "^26.4.4",
    "source-code-tokenizer": "^0.1.5",
    "text-table": "0.2.0",
    "tree-sitter": "0.17.1",
    "tree-sitter-java": "0.16.0",
    "tree-sitter-javascript": "0.16.0",
    "tree-sitter-wasm-prebuilt": "^0.0.3",
    "tslib": "^2.1.0",
    "v8-compile-cache": "^2.2.0",
    "web-tree-sitter": "0.18.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.0",
    "@types/jest": "26.0.20",
    "@types/node": "^14.14.10",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jsdoc": "^31.0.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tree-sitter-cli": "0.18.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/devreplay/devreplay.git"
  },
  "keywords": [
    "cli",
    "linter",
    "lint"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devreplay/devreplay/issues"
  },
  "homepage": "https://github.com/devreplay/devreplay#readme",
  "author": "Yuki Ueda",
  "private": false
}
